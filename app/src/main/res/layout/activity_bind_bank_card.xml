<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    tools:context="com.cashloan.jumidai.ui.homeMine.activity.BindBankCardActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_bind_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/x10"
                android:paddingLeft="@dimen/x20"
                android:paddingTop="@dimen/x10"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_h6" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/CoupleLayout.LineLeft"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/bank_name"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_h3" />

                    <TextView
                        android:id="@+id/tv_card_owner"
                        style="@style/EditText.Null"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="@string/person_name_hint" />
                </LinearLayout>

                <LinearLayout
                    style="@style/CoupleLayout.LineLeft"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/bank_select_bank"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_h3" />

                    <TextView
                        android:id="@+id/tv_cardBind_bankName"
                        style="@style/BasicTheme.TextView.Arrow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="@string/bank_select_bank_hint"
                        android:paddingLeft="@dimen/x20"
                        android:textColorHint="@color/hint_grey" />
                </LinearLayout>

                <LinearLayout
                    style="@style/CoupleLayout"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tv_card_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_h3" />

                    <com.commom.widget.editText.ClearEditText
                        android:id="@+id/cet_card_num"
                        style="@style/EditText.Null"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:hint="@string/bank_card_no_hint"
                        android:inputType="number"
                        android:maxLength="19" />
                </LinearLayout>


                <LinearLayout
                    style="@style/CoupleLayout"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/bank_verify_code"
                        android:textColor="@color/text_black"
                        android:textSize="@dimen/text_size_h3" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="horizontal">

                        <com.commom.widget.editText.ClearEditText
                            android:id="@+id/cet_card_code"
                            style="@style/EditText.Null"
                            android:layout_width="0dp"
                            android:layout_weight="3"
                            android:hint="@string/bank_verify_code_hint"
                            android:inputType="number"
                            android:maxLength="6" />

                        <View
                            android:layout_width="@dimen/x1"
                            android:layout_height="@dimen/y40"
                            android:layout_gravity="center_vertical"
                            android:background="@color/divide_line" />

                        <com.commom.widget.TimeButton
                            android:id="@+id/tb_card_bind"
                            style="@style/timeButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/bank_verify_send_code" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <com.commom.widget.NoDoubleClickButton
                android:id="@+id/ndb_card_bindNow"
                style="@style/primary_button"
                android:layout_marginTop="@dimen/y40" />


        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>
