<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    android:fitsSystemWindows="true"
    tools:context="com.cashloan.jumidai.ui.homeMine.activity.GdMapActivity">


    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y70"
            android:background="@color/app_color_principal"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:padding="8dp"
                android:src="@mipmap/icon_common_back_white" />

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="@dimen/x0"
                android:layout_height="@dimen/y60"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:background="@drawable/shape_edittext_normal"
                android:drawableLeft="@drawable/icon_poisearch"
                android:drawablePadding="@dimen/x20"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/x10"
                android:text="@string/findmaphint"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_h5" />

            <com.commom.widget.editText.ClearEditText
                android:id="@+id/et_search"
                android:layout_width="@dimen/x0"
                android:layout_height="@dimen/y60"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x20"
                android:layout_weight="1"
                android:background="@drawable/shape_edittext_normal"
                android:drawableLeft="@drawable/icon_poisearch"
                android:drawablePadding="@dimen/x16"
                android:gravity="center_vertical"
                android:hint="查找小区、大厦、学校等"
                android:paddingLeft="@dimen/x10"
                android:textSize="@dimen/text_size_h5"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_search_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/y60"
                android:layout_marginRight="@dimen/x20"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:text="@string/cancle"
                android:textColor="@color/text_white"
                android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">

            <com.amap.api.maps2d.MapView
                android:id="@+id/map"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/line_center_vertical"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:src="@drawable/icon_map_center" />

            <View
                android:id="@+id/line_center_vertical"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_centerVertical="true" />

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/selector_btn_location"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">


            <com.commom.widget.recycler.xRecycler.XRecyclerView
                android:id="@+id/rc_map_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:overScrollMode="never" />

        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_title"
        android:visibility="gone">

    </FrameLayout>


</RelativeLayout>
