<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.cashloan.jumidai.ui.user.activity.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:padding="4dp"
            android:src="@drawable/icon_login_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_dark"
            android:textSize="16sp"
            tools:text="登录" />

    </RelativeLayout>

    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp" />

    <LinearLayout
        android:id="@+id/ll_login_stepOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:visibility="visible">


        <TextView
            android:id="@+id/tv_login_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:text="登录"
            android:textColor="#4c516a"
            android:textSize="28sp" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="16dp"
            app:hintTextAppearance="@style/TextEditInput">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/cet_login_phone"
                style="@style/EditText.Null"
                android:layout_height="wrap_content"
                android:digits="0123456789"
                android:hint="@string/login_phone_hint"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="0dp"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_grey"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="12dp"
            android:background="@color/base_horizontal_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="25dp">

            <android.support.design.widget.TextInputLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:hintTextAppearance="@style/TextEditInput">

                <com.commom.widget.editText.ClearEditText
                    android:id="@+id/code"
                    style="@style/EditText.Null"
                    android:hint="@string/register_code_hint"
                    android:inputType="number"
                    android:maxLength="6"
                    android:padding="0dp"
                    android:textSize="17sp" />
            </android.support.design.widget.TextInputLayout>

            <com.commom.widget.TimeButton
                android:id="@+id/timeButton"
                style="@style/timeButtonStyle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:text="@string/register_get_code" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="12dp"
            android:background="@color/base_horizontal_line" />

        <com.commom.widget.NoDoubleClickButton
            android:id="@+id/ndb_login_next"
            style="@style/primary_button"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="70dp"
            android:enabled="false"
            android:text="@string/register_login" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_change_pwdLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:padding="@dimen/size_20"
            android:text="密码登录"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_15" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_login_stepTwo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone">

        <TextView
            android:id="@+id/tv_login_phoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="20dp"
            android:text="@string/register_login"
            android:textColor="#4c516a"
            android:textSize="28sp" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_pwdLogin_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="10dp"
            app:hintTextAppearance="@style/TextEditInput">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/cet_pwdLogin_phone"
                style="@style/EditText.Null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_phone_hint"
                android:inputType="number"
                android:maxLength="11"
                android:padding="0dp"
                android:textColorHint="@color/text_grey"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="12dp"
            android:background="@color/base_horizontal_line" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="10dp"
            app:hintTextAppearance="@style/TextEditInput">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/cet_login_pwd"
                style="@style/EditText.Null"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/login_pwd_hint"
                android:inputType="textPassword"
                android:maxLength="16"
                android:padding="0dp"
                android:textColorHint="@color/text_grey"
                android:textSize="17sp" />

        </android.support.design.widget.TextInputLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:layout_marginTop="12dp"
            android:background="@color/base_horizontal_line" />

        <com.commom.widget.NoDoubleClickButton
            android:id="@+id/ndb_login_now"
            style="@style/primary_button"
            android:layout_marginLeft="38dp"
            android:layout_marginRight="38dp"
            android:layout_marginTop="@dimen/y40"
            android:enabled="false"
            android:text="@string/login_btn" />


        <TextView
            android:id="@+id/tv_login_forget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/login_pwd_forget"
            android:textColor="@color/base_show_text_color"
            android:textSize="@dimen/text_size_h6" />


        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_change_codeLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:padding="@dimen/size_20"
            android:text="验证码登录"
            android:textColor="@color/text_dark"
            android:textSize="@dimen/text_size_15" />

    </LinearLayout>

</LinearLayout>
