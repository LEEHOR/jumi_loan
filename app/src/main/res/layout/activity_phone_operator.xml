<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    tools:context="com.cashloan.jumidai.ui.homeMine.activity.PhoneOperatorActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_phoneVerify_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y80"
            android:contentDescription="@string/app_name"
            android:src="@drawable/icon_phone_credit" />

        <TextView
            android:id="@+id/tv_phoneVerify_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y20"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_h3" />

        <com.commom.widget.NoDoubleClickButton
            android:id="@+id/ndb_verify_phone"
            style="@style/primary_button"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/y40" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>
