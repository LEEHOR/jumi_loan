<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background"
    android:orientation="vertical"
    tools:context="com.cashloan.jumidai.ui.homeMine.activity.SetPayPwdActivity">


    <TextView
        android:id="@+id/tv_set_payPwd_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/y200" />

    <cn.pedant.SweetAlert.PasswordInputView
        android:id="@+id/pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y90"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/x50"
        android:layout_marginRight="@dimen/x50"
        android:layout_marginTop="@dimen/y20"
        android:background="@drawable/shape_grey"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:inputType="number" />

</LinearLayout>
