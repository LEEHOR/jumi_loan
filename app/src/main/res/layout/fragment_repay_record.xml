<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_record"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_background">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_background">

        <LinearLayout
            android:id="@+id/ll_no_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iv_no_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                tools:src="@drawable/icon_no_loan_record" />

            <TextView
                android:id="@+id/tv_no_record"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/base_hint_text_color"
                android:textSize="@dimen/text_size_14"
                tools:text="您还没有借款记录！" />

            <com.commom.widget.NoDoubleClickButton
                android:id="@+id/ndb_no_reocrd"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/primary_button_selector"
                android:text="@string/repay_apply"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_15" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_repay_record"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            tools:visibility="visible">

            <TextView
                android:id="@+id/tv_record_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/base_hint_text_color"
                android:textSize="@dimen/text_size_14"
                tools:text="您还有1笔待还款" />

            <com.commom.widget.recycler.xRecycler.XRecyclerView
                android:id="@+id/rc_repay_record"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </FrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>