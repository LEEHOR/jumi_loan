<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_item_verify"
    android:layout_width="match_parent"
    android:layout_height="124dp"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_item_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/icon_verify_more" />

    <TextView
        android:id="@+id/tv_item_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/base_light_text_color"
        android:textSize="14sp"
        tools:text="个人信息" />

    <TextView
        android:id="@+id/tv_item_verifyStatus"
        style="@style/tvVerifyBtnStyle"
        android:layout_marginTop="6dp"
        tools:text="待填写" />

</LinearLayout>