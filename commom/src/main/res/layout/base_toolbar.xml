<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root_toolBar"
    android:layout_width="match_parent"
    android:background="@color/base_color"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/csl_title_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="@dimen/title_min_width_left"
        android:paddingLeft="@dimen/title_padding_left">

        <ImageView
            android:id="@+id/iv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/icon_common_back_white" />

        <TextView
            android:id="@+id/tv_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:maxLines="1"
            android:textColor="@color/base_title_text"
            android:textSize="@dimen/text_size_17"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_title_left"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="返回"
            tools:visibility="visible" />


    </android.support.constraint.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/rl_title_center"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_title_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:src="@mipmap/icon_common_back_white"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_title_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:ellipsize="marquee"
            android:maxWidth="@dimen/x320"
            android:singleLine="true"
            android:textColor="@color/base_title_text"
            android:textSize="@dimen/text_size_17"
            tools:text="标题" />


    </RelativeLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/csl_title_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:minWidth="@dimen/title_min_width_right"
        android:paddingRight="@dimen/title_padding_right"
        android:visibility="gone"
        tools:visibility="visible">


        <TextView
            android:id="@+id/tv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_17"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="保存" />


        <ImageView
            android:id="@+id/iv_title_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_title_right"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/icon_keyboard_close" />

        <ImageView
            android:id="@+id/iv_title_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_title_right"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@mipmap/icon_keyboard_delete" />

    </android.support.constraint.ConstraintLayout>


</RelativeLayout>