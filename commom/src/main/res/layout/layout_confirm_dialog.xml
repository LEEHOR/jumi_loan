<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size_60"
    android:background="@drawable/shape_common_dialog_bg"
    android:minHeight="130dp"
    android:orientation="vertical"
    android:paddingTop="@dimen/size_12">



    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lineSpacingExtra="5dp"
        android:padding="@dimen/size_16"
        android:textColor="@color/text_dark"
        android:textSize="15dp"
        tools:text="下面13个属性是用来控制子View相对" />

    <android.support.v4.widget.Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/base_horizontal_line" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/dialog_submit"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/selector_btn_commom_bottom"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/common_confirm"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>
</LinearLayout>
