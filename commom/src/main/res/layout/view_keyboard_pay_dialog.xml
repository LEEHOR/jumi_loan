<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_pay_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_30"
        android:layout_marginRight="@dimen/size_30"
        android:layout_marginTop="@dimen/size_80"
        android:background="@drawable/shape_menu_dialog"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_pay_close"
            android:layout_width="@dimen/size_50"
            android:layout_height="@dimen/size_50"
            android:scaleType="center"
            android:src="@mipmap/icon_common_back_white" />


        <TextView
            android:id="@+id/tv_pay_title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/size_50"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="请输入交易密码"
            android:textColor="@color/base_show_text_color"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_0_5"
            android:layout_marginTop="@dimen/size_50"
            android:background="@color/base_horizontal_line" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="@dimen/size_50"
            android:background="@drawable/selector_menu_btn_buttom">

            <com.commom.widget.keyboard.PayEditText
                android:id="@+id/pet_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/size_30"
                android:layout_marginRight="@dimen/size_30" />

        </RelativeLayout>
    </RelativeLayout>

    <com.commom.widget.keyboard.PayKeyBoard
        android:id="@+id/payKeyBoard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>